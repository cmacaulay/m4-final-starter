
<% if current_user %>

  <%= link_to "Sign Out", logout_path, method: "DELETE" %>
  <h1 class="center-block">Manage Links</h1>
  <hr>
  <%= render "new_link" %>
  <hr>
  <p>
    <label for="link-search">Search: </label>
    <input type="text" id="link-search" placeholder="Search By Text">
    <a class="btn btn-default" id="all-unread" href="#">Only Unread Links</a>
    <a class="btn btn-default" id="all-read" href="#">Only Read Links</a>
  </p>
  <%= render "links" %>
<% end %>

<% if !current_user %>
  <h1>Login</h1>
  <%= render "login" %>
  <p>Create Account: <%=link_to "Sign Up", new_user_path %></p>
<% end %>
